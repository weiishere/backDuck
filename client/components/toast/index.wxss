.toast {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0
}
.toast-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  /* background: rgba(0,0,0,0.7) */
}
.toast-text {
  position: absolute;
  padding: 16rpx 32rpx;
  background: rgba(0,0,0,.8);
  text-align: center;
  color: #fff;
  border-radius: 5px;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%)
}