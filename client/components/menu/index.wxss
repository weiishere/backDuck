
.menu-warp{
  width: 100%;
  height: 100%;
  right: 0;
  top: 0;
  position: fixed;
}
.menu-warp .mask{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0,0,0,.1);
  opacity: 0;
  transition: opacity 1 ease-in-out;
}
.menu-warp .mask.active{
  opacity: 1
}
.menu-warp .menu{
  width: 0;
  position: absolute;
  right: 0px;
  bottom: 200rpx;
  /* transform:  */
  transition: width 1s ease;
}
.menu-warp .menu.active{
  width: 370rpx;
}
.menu-head{
  width: 48rpx;
  height: 90rpx;
  position: absolute;
  display: flex;
  left: -88rpx;
  top: 50%;
  color: #fff;
  font-size: 20rpx;
  padding-left: 42rpx;
  transform: translateY(-50%);
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  background: url('data:image/png;base64,') rgba(0,0,0,.4) no-repeat left center;
  background-size: 60rpx;
  justify-content: center;
  align-items: center
}
.menu-content{
  display: flex;
  background: #fff;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  overflow: hidden;
}
.menu-content .icon-wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 26rpx 0;
}
.menu-content .icon-box{
  width: 116rpx;
  /* height: 130rpx; */
  text-align: center;
  color: #676767;
  font-size: 24rpx;
}
.menu-content .icon-box .icon{
  width: 48rpx;
  height: 48rpx;
  display: block;
  margin: 0 auto;
}
