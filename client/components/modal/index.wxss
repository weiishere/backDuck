.modal-wrapper{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0; 
  right: 0;
  top: 0; 
  bottom: 0;
  z-index: 0;
  background: rgba(0,0,0,.4);
}
.modal-top{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx #eee solid;
  position: relative;
}
.modal-top .modal-title{
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
}
.modal-top .modal-close{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  position: absolute;
  left: 10px;
  top: 50%;
  transform: translateY(-50%);
}
.modal-box{
  z-index: 1;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 5px;
  padding: 10rpx 0;
}
.modal-content{
  padding: 0 15px;
}
.modal-bottom{
  display: flex;
}
.modal-bottom .modal-btn{
  flex: 1;
  text-align: center;
}