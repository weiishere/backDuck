.container.order {
  background: #f1f1f1;
}

.order_header {
  width: 100%;
  background: #fff;
  border-top: solid 1rpx #ccc;
  border-bottom: solid 1rpx #aeaeae;
  position: relative;
  background: #4485b8;
  height: 200rpx;
}

.order_header>view {
  text-align: center;
  line-height: 200rpx;
  color: #fff;
}
.order_header image{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  margin-right: 30rpx;
}

.order_header_info {
  background: #fff;
  padding: 30rpx 0;
  display: flex;
  border-bottom: solid 1rpx #ddd;
}

.order_header_info image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
}

.order_header_info>view:last-child {
  flex: 1;
}

.order_header_info>view:first-child {
  width: 100rpx;
  text-align: center;
}

.order_header_info .gray {
  color: #c3c3c3;
  font-size: 24rpx;
}

.info2 {
  display: inline-block;
  width: 100%;
  font-size: 24rpx;
}

.info2 view {
  display: inline-block;
  width: 90% !important;
  text-align: left;
}

.order_body {
  width: 100%;
  display: inline-block;
  padding-bottom: 120rpx;
}

.order_item {
  background: #fff;
}

.order_item_body {
  display: flex;
  height: 90rpx;
  padding: 20rpx 50rpx;
  background: #eee;
  margin-bottom: 5rpx;
  position: relative;
}

.order_item_body .isurgent{
  width: 73rpx;
  height: 73rpx;
  position: absolute;
  left: 0px;
  top: 0px;
}
.order_item_body .isobtained{
  width: 130rpx;
  height: 70rpx;
  position: absolute;
  right: 150rpx;
  top: 50%;
  transform: translateY(-50%)
}
.order_item_body view {
  /* flex: 7; */
  line-height: 20rpx;
}
.order_item_body .pic-wrap{
  margin-right: 25rpx;
}
.order_item_body .pic-wrap .pic {
  width: 90rpx;
  height: 90rpx;
}
.order_item_body .item-info{
  flex: 1;
}

.order_item_body view .gray {
  color: #c3c3c3;
  font-size: 26rpx;
}

.order_item_body view .delete {
  text-decoration: line-through;
}

.order_item_body view:last-child text {
  width: 100%;
  display: block;
  line-height: 45rpx;
}

.order_item_footer {
  height: 90rpx;
  line-height: 90rpx;
  text-align: right;
  font-size: 24rpx;
  color: #4A4A4A
}

.order_item_footer view {
  width: 95%;
  
}

.order_item_footer .red {
  color: #ff282b;
}

.order_footer {
  position: fixed;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  width: 100%;
  bottom: 0;
  display: flex;
}

.order_footer view:first-child {
  flex: 1;
  padding-left: 20rpx;
}

.order_footer view .red {
  color: #ff282b;
}

.order_footer view:last-child {
  width: 270rpx;
  background: #255478;
  text-align: center;
}

.order_footer view:last-child text {
  color: #fff;
  font-size: 34rpx;
}
.confirm-info{
  margin-top: 36rpx;
  background: #fff;
}
.confirm-title, 
.confirm-item .title{
  font-size: 26rpx;
}
.confirm-title{
  padding: 20rpx 30rpx; 
}
.confirm-item .title{
  font-weight: 600;
  padding-bottom: 20rpx; 
}
.confirm-item{
  border-top: #aeaeae 1rpx solid;
  padding: 20rpx 0;
  margin: 0 30rpx;
}
.image-wrap{
  flex: 1;
  text-align: center;
  /* background: #f1f1f1 */
}
.image-wrap .pic{
  width: 214rpx;
  height: 214rpx;
  display: inline-block;
}