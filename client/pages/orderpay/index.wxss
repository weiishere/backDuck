page{
  background: #f1f1f1;
}
.paytype-wrap{
  background: #fff;
  /* padding: 30rpx 0; */
}
.paytype-wrap .paytype-item{
  display: flex;
  height: 48rpx;
  line-height: 48rpx;
  padding: 30rpx 0;
  margin: 0 30rpx;
  font-size: 32rpx;
  border-bottom: #aeaeae solid 1rpx;
  color: #676767
}
.paytype-wrap .paytype-item.active{
  color: #000;
}

.paytype-wrap .paytype-item .label{
  color: #000;
  font-weight: 600;
}
.paytype-wrap .paytype-item .amount{
  color: #235379;
  font-weight: 600;
  margin-right: 20rpx;
}

.paytype-wrap .paytype-item:last-child{
  border-bottom: none;
}
.paytype-item-left,
.paytype-item-right{
  display: flex;
  justify-content: center;
  align-items: center;
}
.paytype-item-type-icon{
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
  margin: 0 16rpx;
}
.paytype-item .paytype-item-content{
  flex: 1;
  margin-left: 20rpx;
}
.sub-title{
  font-size: 36rpx;
  height: 85rpx;
  line-height: 85rpx;
  text-indent: 46rpx;
}
.order-info{}
.order-info-item{
  font-size: 36rpx;
  border-bottom: none!important;
}
.order-info-item.first,
.order-info-item.last{
  font-size: 28rpx!important;
}
.order-info-item.first{
  padding: 30rpx 0 0 0;
}
.order-info-item.last{
  padding: 5rpx 0 30rpx 0;
}
.orderpay-wrap .btn-wrap{
  margin: 72rpx;
}
.btn-wrap .btn{
  font-size: 30rpx;
}