.recharge{
  width: 100%;
}
.recharge-topbg{
  width: 100%;
  height: 298rpx;
  overflow: hidden;
  /* display: none; */
}
.recharge-topbg .image{
  width: 100%;
  height: 298rpx;
  display: block;
}

.recharge-wrap{
  margin: 0px 30rpx;
}
.recharge-wrap .title {
  height: 112rpx;
  line-height: 112rpx;
  font-size: 30rpx
}
.recharge-wrap .text{
  width: 100%;
  height: 300rpx;
  background: #f8f8f8;
  border: #e5e5e5 1px solid;
  padding: 20rpx;
  box-sizing: border-box
}
.recharge-wrap .recharge{

}
.recharge-wrap .recharge dt,
.recharge-wrap .recharge dd{
  display: block;
  border-bottom:#e5e5e5 1rpx solid;
}
.recharge-wrap .recharge dt{
  height: 148rpx;
  line-height: 148rpx;
  font-size: 36rpx;
  font-weight: 600;
}
.recharge-wrap .recharge dd{
  height: 48rpx;
  line-height: 48rpx;
  padding: 19rpx;
  padding-left: 70rpx;
  position: relative;
  font-size: 38rpx;
  color: #737373;
}
.recharge-wrap .recharge dd .give{
  font-size: 30rpx;
  margin-left: 10rpx;
}
.recharge-wrap .recharge dd.active{
  color: #000000;
}
.recharge-wrap .recharge dd .check-icon{
  width: 48rpx;
  height: 48rpx;
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  margin-top: 20rpx;
}
.recharge-wrap .btn{
  width: auto;
  margin: 76rpx 46rpx 0;
}
.recharge-wrap .agree-tips{
  text-align: center;
  font-size: 22rpx;
  color: #767676;
  margin-top: 50rpx;
}
.recharge-wrap .agree-tips .agree-link{
  color: #23537b;
}