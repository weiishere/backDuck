<view class='container bindphone'>
  <view class='bindphone-wrap clearfix'>
    <image class='bindphone-logo' src='/assets/logo@2x.png'></image>
    <view class='form-wrap'>
      <view class='form-item'>
        <view class='form-item-label'>
          <view class='label'>手机号</view>
        </view>
        <view class='form-item-content'>
          <input type='tel' 
            class='form-input'
            maxlength='11' 
            placeholder='请输入手机号'
            id='userphone'>
          </input>
        </view>
        <view class='form-item-tools'></view>
      </view>
      <view class='form-item'>
        <view class='form-item-label'>
          <view class='label'>验证码</view>
        </view>
        <view class='form-item-content'>
          <input type='tel' 
            class='form-input'
            maxlength='6' 
            placeholder='请输入验证码'
            id='userphone'>
          </input>
        </view>
        <view class='form-item-tools'>
          <view class='sms-captcha'>获取验证码</view>
        </view>
      </view>
    </view>
    <view class='btn'>绑定手机</view>
    <view class='no-sms-captcha'>收不到验证码</view>
  </view>
</view>