/* pages/home/home.js.wxss */

.container.home {
  background-image: url('https://xiu-store-1255815795.cos.ap-chengdu.myqcloud.com/blackDuck/WechatIMG469.jpeg');
  /*background-size: cover;*/
  background-size: 100% 100%;
}
.is-no-user-info{
  position: absolute;
  width: 100%;
  height: 100%;
  display: block;
  left: 0;
  top: 0;
  opacity: 0;
  z-index: 99;
}
.container.home i {
  font-family: 'iconfont';
  display: inline-block;
}

.container.home .warpview {
  width: 100%;
  height: 100%;
}

.home_header {
  width: 100%;
  height: 120rpx;
  position: relative;
}
.home_header .icon-wrap{
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  font-size: 40rpx;
  position: absolute;
  top: 30rpx;
  text-align: center;
}
.home_header .icon-wrap.menu{
  left: 30rpx;
}
.home_header .icon-wrap.order{
  right: 30rpx;
}
.home_header .icon-wrap i{
  top: 50%;
  left: 50%;
  position: absolute;
  transform: translate(-50%, -50%)
}

.home_header button.icon-nav_menu{
  position: static;
  margin-left:0;
  margin-right:0;
  padding-left:0;
  padding-right:0;
  box-sizing: content-box;
  text-align:center;
  text-decoration:none;
  line-height: normal;
  border-radius: 0;
  -webkit-tap-highlight-color:transparent;
  overflow: hidden;
  background: none;
  font-family:'iconfont';
  display: inline-block;
  font-size: 30rpx;
  margin: 0;
  padding: 0;
}

.home_footer {
  position: absolute;
  width: 80%;
  left: 0;
  right: 0;
  margin: auto;
  height: 120rpx;
  bottom: 110rpx;
  display: flex;
}

.home_footer view {
  flex: 1;
  text-align: center;
  opacity: 0.8;
}

.home_footer view span {
  display: inline-block;
  width: 100%;
}

.home_footer view image {
  width: 125rpx;
  height: 125rpx;
}

.home_sider {
  position: absolute;
  left: 0;
  top: 0;
  width: 520rpx;
  height: 100%;
  background: #fff;
  /*border-right: solid 1rpx #ccc;*/
  box-shadow: 3rpx 0 6rpx #666;
  transform: translate3d(-101%, 0, 0);
  transition: all 0.2s ease-out;
}

.home_sider.show {
  transform: translate3d(0, 0, 0);
}

.home_sider_header {
  text-align: center;
  width: 100%;
  border-bottom: solid 1px #aeaeae;
  height: 400rpx;
}

.home_sider_header>image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  overflow: hidden;
  margin: 70rpx auto 10px auto;
}

.home_sider_name {
  font-size: 30rpx;
  line-height: 70rpx;
}

.home_sider_level {
  display: inline-block;
  font-size: 18rpx;
}

.home_sider_level image {
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
  margin-right: -14rpx;
}

.home_sider_level text {
  display: inline-block;
  vertical-align: middle;
  background: rgba(0, 1, 1, 0.05);
  width: 140rpx;
  border-radius: 10rpx;
  line-height: 35rpx;
  color: #999;
  position: relative;
}

.home_sider_level text::after {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  right: 15rpx;
  top: 10rpx;
  color: #999;
  border-top: solid 1px #666;
  border-right: solid 1px #666;
  transform: rotate(45deg);
}

.home_sider_body {
  padding: 25rpx 0;
}

.home_sider_body ul {
  width: 100%;
  display: inline-block;
  text-align: center;
}

.home_sider_body ul li {
  display: inline-block;
  line-height: 80rpx;
  text-align: left;
  width: 92%;
  font-size: 32rpx;
}
.home_sider_body ul li.new-activity{
  color: #235379
}

.home_sider_body ul li i {
  margin: 0 34rpx;
}

.home_sider_footer {
  position: absolute;
  bottom: 20rpx;
  height: 80rpx;
  left: 0;
  width: 100%;
  display: flex;
}

.home_sider_footer>view {
  text-align: center;
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
}

.home_sider_footer>view:last-child {
  flex: 2;
}

.home_sider_footer>view i {
  margin: 0 15rpx;
}
.nitice-num{
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 16rpx;
  display: inline-block;
  vertical-align: middle;
  color: #fff;
  background: #235379;
  border-radius: 99px;
  margin-top: -5px;
  margin-left: 8px;
}
.recharge-btn{
  font-size: 26rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #235379;
  border: #235379 1px solid;
  margin-left: 8px;
  border-radius: 3px;
  padding: 0 10rpx;
}
